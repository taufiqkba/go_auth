  "servers": [
    {
      "description": "Authentication API Server",
      "url": "https://{environment}.taufiqkba.com/api/v1",
      "variables": {
        "environment": {
          "description": "Server Environment",
          "default": "dev",
          "enum": [
            "dev",
            "qa",
            "prod"
          ]
        }
      }
    }
  ],
  "externalDocs": {
    "description": "Github Taufiq Kurniawan",
    "url": "https://github.com/taufiqkba"
  },
  "paths": {
    "/": {
      "get": {
        "summary": "Root direct to home page",
        "description": "Direct to home page",
        "parameters": [],
        "responses": {

        }
      }
    },
    "/login": {
      "get": {
        "summary": "Direct to login page",
        "description": "Direct to login page",
        "parameters": [],
        "responses": {

        }
      }
    },
    "/register": {
      "get": {
        "summary": "Direct to register page",
        "description": "Direct to register page",
        "parameters": [],
        "responses": {

        }
      },
      "post": {
        "summary": "Create new user",
        "description": "Create new user to database",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "minLength": 3,
                    "required": true
                  },
                  "email": {
                    "type": "string",
                    "required": true,
                    "uniqueItems": true,
                    "minLength": 6
                  },
                  "username": {
                    "type": "string",
                    "required": true,
                    "uniqueItems": true,
                    "minLength": 3
                  },
                  "password": {
                    "type": "string",
                    "required": true,
                    "minLength": 6
                  }
                }
              },
              "examples": {
                "register": {
                  "description": "Example for register user",
                  "value": {
                    "name": "Full Name",
                    "email": "register@email.com",
                    "username": "username",
                    "password": "password"
                  }
                }
              }
            }
          }
        },
        "parameters": [],
        "responses": {

        }
      }
    },
    "/logout": {
      "post": {
        "summary": "Logout user",
        "description": "Logout user within remove session",
        "parameters": [],
        "responses": {

        }
      }
    }
  }
}